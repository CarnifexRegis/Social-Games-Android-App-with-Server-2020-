<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <!--android:background="@drawable/monster_land"-->

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:weightSum="100">

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="12" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="76"
                android:background="@drawable/paper_texture"
                android:fontFamily="@font/elsie_swash_caps"
                android:gravity="center"
                android:text="Abaddon"
                android:textColor="#353434"
                android:textScaleX="1.0"
                android:textSize="22sp"
                android:textStyle="normal|bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="12" />
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="59"
            android:orientation="vertical"
            android:weightSum="59">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="49.2"
                android:orientation="horizontal"
                android:weightSum="100">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="10" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:scaleType="fitXY"
                    android:src="@drawable/standart" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="10" />
            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="9.8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="12.7"
            android:orientation="horizontal"
            android:weightSum="100">

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="9" />

            <TextView
                android:id="@+id/damage"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="36.5"
                android:background="@drawable/paper_texture"
                android:fontFamily="@font/elsie_swash_caps"
                android:gravity="center"
                android:text="300"
                android:textColor="#B92323"
                android:textScaleX="1.0"
                android:textSize="60sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="9" />

            <TextView
                android:id="@+id/health"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="36.5"
                android:background="@drawable/paper_texture"
                android:fontFamily="@font/elsie_swash_caps"
                android:gravity="center"
                android:text="500"
                android:textColor="#048008"
                android:textScaleX="1.0"
                android:textSize="60sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="9" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/element"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/monster_land" />

    <android.support.constraint.Guideline
        android:id="@+id/verGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <android.support.constraint.Guideline
        android:id="@+id/horGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />

    <android.support.constraint.Guideline
        android:id="@+id/verGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.29" />

    <android.support.constraint.Guideline
        android:id="@+id/horGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <TextView
        android:id="@+id/mana"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/mana_crystal"
        android:fontFamily="@font/elsie_swash_caps"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:text="9"
        android:textColor="#FDFFFFFF"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/horGuideline2"
        app:layout_constraintEnd_toStartOf="@+id/verGuideline2"
        app:layout_constraintStart_toStartOf="@+id/verGuideline1"
        app:layout_constraintTop_toTopOf="@+id/horGuideline1" />
</android.support.constraint.ConstraintLayout>