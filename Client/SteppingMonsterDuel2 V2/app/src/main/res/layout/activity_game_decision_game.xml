<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#261253"
    tools:context=".GameDecisionActivity">

    <ImageView
        android:id="@+id/WinLoseImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/endY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />

    <android.support.constraint.Guideline
        android:id="@+id/startY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/startX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <android.support.constraint.Guideline
        android:id="@+id/endX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/endX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline
        android:id="@+id/startX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <Button
        android:id="@+id/addFriendWinLose"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Add enemy!"
        app:layout_constraintBottom_toTopOf="@id/endY"
        app:layout_constraintEnd_toStartOf="@id/endX"
        app:layout_constraintStart_toStartOf="@id/startX"
        app:layout_constraintTop_toTopOf="@id/startY" />

    <Button
        android:id="@+id/ContinueButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Continue!"
        app:layout_constraintBottom_toBottomOf="@id/endY"
        app:layout_constraintEnd_toEndOf="@id/endX2"
        app:layout_constraintStart_toStartOf="@id/startX2"
        app:layout_constraintTop_toTopOf="@id/startY"
        app:layout_constraintVertical_bias="0.5" />
</android.support.constraint.ConstraintLayout>